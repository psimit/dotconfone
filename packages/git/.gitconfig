[user]
	name = Simit Pradhan
	email = simit.pradhan@miko.ai
	signingKey = /home/psimit/.ssh/id_rsa.pub
[alias]
  commit = commit -S
	co = checkout
	st = status
	br = branch
	ci = commit
	cm = commit -m
	cam = commit -am
	last = log -1 HEAD
	lgr = log --graph --decorate
	ll = log --oneline --graph --all --decorate=short --color=always
	amend = commit --amend --no-edit
[color "status"]
  added = green bold
  changed = red bold
	untracked = yellow bold
[core]
	autocrlf = input
	editor = vim

[filter "lfs"]
	smudge = git-lfs smudge -- %f
	process = git-lfs filter-process
	required = true
	clean = git-lfs clean -- %f
[credential]
	helper = store
[gpg]
	format = ssh
[http]
	sslverify = true
[rerere]
	enabled = false
[init]
	defaultBranch = main
